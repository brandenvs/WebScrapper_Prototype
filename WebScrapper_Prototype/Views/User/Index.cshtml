							{
								case 200:
									ViewBag.Result = "Successfully Registered!";
									<div class="danger-color-dark"><i class="ti-alert"></i> @ViewBag.Result</div>
									break;
								case 500:
									ViewBag.Result = "Incorrect Password: Try again!";
									<div class="danger-color-dark"><i class="ti-alert"></i> @ViewBag.Result</div>
									break;
								case 404:
									ViewBag.Result = "Invalid Email: Please Register or Try Again!";
									<div class="danger-color-dark"><i class="ti-alert"></i> @ViewBag.Result</div>
									break;
								default:
									ViewBag.Result = "Please fill out all the fields below";
									<div class="danger-color-dark"><i class="ti-info-alt"></i> @ViewBag.Result</div>
									break;
							}
						}
