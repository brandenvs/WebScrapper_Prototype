								case 200: ViewBag.Result = "Successfully Logged In!";
									<div class="danger-color-dark"><i class="ti-alert"></i> @ViewBag.Result</div>
									break;
								case 500: ViewBag.Result = "Incorrect Password: Try again!";
									<div class="danger-color-dark"><i class="ti-alert"></i> @ViewBag.Result</div>
